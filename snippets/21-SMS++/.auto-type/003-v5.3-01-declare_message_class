#ifndef __SMSPLUSPLUS_MESSAGE_H__
#define __SMSPLUSPLUS_MESSAGE_H__
#include <string> // std::string
#include "identity.h"
#include "contact.h"

namespace SMSpp {
  class Identity;

  /// \brief Class implementation that describes ECIES-encrypted messages.
  class Message
  {
    const Identity&    m_id;
    const Contact& m_friend;

  public:
    Message(const Identity&, const Contact&);
    virtual ~Message() {};

    std::string Handle(const std::string&, const std::string&) const;

  private:
    std::string  Read(const std::string&) const;
    std::string Write(const std::string&) const;
  };
}
#endif